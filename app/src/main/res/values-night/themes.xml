<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhysicsWallah" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="appBarStyle">
        <item name="android:background">@drawable/background_toolbar</item>
    </style>

    <style name="fragmentTitle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>


    <style name="nameTextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="qualificatonTextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="buttonViewMore">
        <item name="minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>